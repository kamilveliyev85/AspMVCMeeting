    <script type="text/javascript">
        $(document).ready(function () {

            $("#MT_DATE").datepicker({
                format: 'dd.mm.yyyy',
                autoclose: true
            });

            if ($("#MT_DATE").val() == '') {
                $("#MT_DATE").datepicker("setDate", new Date);
            }

            $('#div_MT_DATE').datepicker({
                format: 'dd.mm.yyyy',
                weekStart: 1,
                startDate: '01/01/1990',
                endDate: '+0d',
                autoclose: true,
            })


            $("#MT_START_TIME").timepicker({
                maxHours: 24,
                showMeridian: false,
                defaultTime: 'current',
                minuteStep: 5
            });


            $("#MT_FINISH_TIME").timepicker({
                maxHours: 24,
                showMeridian: false,
                defaultTime: 'current',
                minuteStep: 5
            });

            $("#MT_MANAGER").select2({
                placeholder: "Seçim edin",
                allowClear: true
            }).val('').change();

            $("#MT_FOLLOWER_USERID").select2({
                placeholder: "Seçim edin",
                allowClear: true
            }).val('').change();
                  
            
            function h(e) {
                $(e).css({ 'height': 'auto', 'overflow-y': 'hidden' }).height(e.scrollHeight);
            }
            $('textarea').each(function () {
                h(this);
            }).on('input', function () {
                h(this);
            });

        });
    </script>

    <style>
        .control-label {
            text-align: left !important;
        }
    </style>
}

